<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/SignupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="88dp"
        android:text="Sign Up"
        android:textColor="@color/theme_purple"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/snameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="311dp"
        android:layout_marginBottom="10dp"
        android:text="Name"
        android:textColor="@color/theme_purple"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/snameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/snameInput"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="69dp"
        android:background="@drawable/input_field"
        app:layout_constraintBottom_toTopOf="@+id/semail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/semail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="307dp"
        android:text="Email :"
        android:textColor="@color/theme_purple"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/semailInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snameInput" />

    <EditText
        android:id="@+id/semailInput"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="69dp"
        android:background="@drawable/input_field"
        app:layout_constraintBottom_toTopOf="@+id/suniID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semail" />

    <TextView
        android:id="@+id/suniID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="10dp"
        android:text="University ID No :"
        android:textColor="@color/theme_purple"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/suniIDInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semailInput" />

    <EditText
        android:id="@+id/suniIDInput"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_field"
        app:layout_constraintBottom_toTopOf="@+id/spassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suniID" />

    <TextView
        android:id="@+id/spassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="5dp"
        android:text="Password :"
        android:textColor="@color/theme_purple"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/spasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suniIDInput" />

    <EditText
        android:id="@+id/spasswordInput"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_field"
        app:layout_constraintBottom_toTopOf="@+id/userGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spassword" />

    <TextView
        android:id="@+id/userGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="198dp"
        android:text="Already a member? Sign In"
        android:textColor="@color/theme_purple"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/signupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spasswordInput" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/theme_purple"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userGuide" />


</androidx.constraintlayout.widget.ConstraintLayout>