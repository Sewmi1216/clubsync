<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.explore.ExploreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/profileUp"
        android:textAlignment="center"
        android:gravity="center">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/propic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:gravity="center">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Ethan Fernando"
                android:textColor="#3D003D"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3D003D"
                android:textAlignment="textEnd"
                app:drawableLeftCompat="@drawable/baseline_edit_24" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileDetails"
        android:orientation="vertical"
        android:layout_below="@+id/profileUp"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/sepProDetails1"
            android:layout_below="@+id/profileDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="textStart"
                android:textColor="@color/theme_purple"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_nameOutput"
                app:layout_constraintHorizontal_bias="0.364"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="112dp" />

            <TextView
                android:id="@+id/tv_nameOutput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/theme_purple"
                android:padding="8dp"
                android:text="Ethan Fernando"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="215dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sepProDetails2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sepProDetails1"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAlignment="textStart"
                android:textColor="@color/theme_purple"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_emailOutput"
                app:layout_constraintHorizontal_bias="0.351"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                android:layout_marginRight="115dp" />

            <TextView
                android:id="@+id/tv_emailOutput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/theme_purple"
                android:padding="8dp"
                android:text="ethan@gmail.com"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameOutput"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sepProDetails3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sepProDetails2"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_uniId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University ID"
                android:textAlignment="textStart"
                android:textColor="@color/theme_purple"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_uniIdOutput"
                app:layout_constraintHorizontal_bias="0.561"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                android:layout_marginRight="48dp"
                />

            <TextView
                android:id="@+id/tv_uniIdOutput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/theme_purple"
                android:padding="8dp"
                android:text="20020155"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nameOutput" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/profileDetails"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Membership"
            android:textAlignment="center"
            android:textColor="@color/theme_purple"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <LinearLayout
            android:id="@+id/sepProDetails4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sepProDetails3"
            android:orientation="horizontal"
            android:padding="9dp"
            android:textAlignment="center"
            android:gravity="center">

            <Button
                android:id="@+id/clubIEEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/theme_purple"
                android:text="IEEE"
                android:padding="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/clubAIESEC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/theme_purple"
                android:text="AIESEC"
                android:padding="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/clubCompsoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/theme_purple"
                android:text="COMPSOC"
                android:padding="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>